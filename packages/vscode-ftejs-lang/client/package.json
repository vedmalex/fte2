{
  "name": "ftejs-client",
  "private": true,
  "version": "0.0.1",
  "main": "dist/extension.js",
  "scripts": {
    "clean": "git clean -dfqX -- {dist,node_modules}/** && rm -rf tsconfig.tsbuildinfo dist out",
    "build": "bun build.ts",
    "build:bundle": "bun build.ts",
    "build:types": "tsc -b",
    "watch": "bun --watch build.ts",
    "watch:types": "tsc -w",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "fte.js-standalone": "catalog:",
    "vscode-languageclient": "catalog:"
  },
  "devDependencies": {
    "typescript": "catalog:build",
    "@types/node": "catalog:build",
    "@types/vscode": "catalog:build",
    "prettier": "catalog:development"
  },
  "contributes": {
    "configuration": {
      "title": "fte.js",
      "properties": {
        "prettier.documentSelectors": {
          "type": "array",
          "default": [
            "template-js",
            "template-html",
            "template-typescript",
            "template-markdown"
          ],
          "description": "Languages to format with Prettier via fte.js (if Prettier is installed)."
        }
      }
    }
  }
}
