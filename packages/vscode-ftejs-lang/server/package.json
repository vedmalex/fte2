{
  "name": "ftejs-server",
  "private": true,
  "version": "0.0.1",
  "main": "dist/server.js",
  "scripts": {
    "clean": "git clean -dfqX -- {dist,node_modules}/** && rm -rf tsconfig.tsbuildinfo dist out",
    "build": "tsc -b && bun build.ts",
    "build:bundle": "bun build.ts",
    "build:types": "tsc -b",
    "watch": "bun --watch build.ts",
    "watch:types": "tsc -w",
    "test": "npm run build:types && vitest run"
  },
  "dependencies": {
    "fte.js-base": "catalog:",
    "fte.js-parser": "catalog:",
    "fte.js-formatter": "catalog:",
    "fte.js-standalone": "catalog:",
    "prettier": "catalog:development",
    "vscode-languageserver": "catalog:",
    "vscode-languageserver-textdocument": "catalog:"
  },
  "devDependencies": {
    "@types/node": "catalog:build",
    "vitest": "catalog:build",
    "typescript": "catalog:build"
  }
}
