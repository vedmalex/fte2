{
  "name": "ftejs-server",
  "private": true,
  "version": "0.0.1",
  "main": "dist/server.js",
  "scripts": {
    "clean": "git clean -dfqX -- {dist,node_modules}/** && rm -rf tsconfig.tsbuildinfo dist out",
    "build": "tsc -b && bun build.ts",
    "build:bundle": "bun build.ts",
    "build:types": "tsc -b",
    "watch": "bun --watch build.ts",
    "watch:types": "tsc -w",
    "test": "npm run build:types && vitest run"
  },
  "dependencies": {
    "fte.js-base": "workspace:*",
    "fte.js-parser": "workspace:*",
    "fte.js-formatter": "workspace:*",
    "fte.js-standalone": "workspace:*",
    "prettier": "^3.6.2",
    "vscode-languageserver": "catalog:dev",
    "vscode-languageserver-textdocument": "catalog:dev"
  },
  "devDependencies": {
    "@types/node": "latest",
    "vitest": "^3.2.4",
    "typescript": "next"
  }
}