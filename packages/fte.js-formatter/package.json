{
  "name": "fte.js-formatter",
  "version": "3.0.0-rc.13",
  "description": "Formatter & Linter for FTE templates",
  "main": "./dist/index.js",
  "types": "./types/index.d.ts",
  "module": "./dist/index.esm.js",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "bun": "./src/index.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./cli": {
      "types": "./types/cli.d.ts",
      "bun": "./src/cli.ts",
      "import": "./dist/cli.esm.js",
      "require": "./dist/cli.js"
    }
  },
  "bin": {
    "fte-format": "./dist/cli.js"
  },
  "files": [
    "dist",
    "types",
    "src"
  ],
  "scripts": {
    "prepublish": "npm run clean && npm run build",
    "build": "npm run build:all",
    "build:cjs": "FORMAT=cjs bun build.ts",
    "build:esm": "FORMAT=esm bun build.ts",
    "build:all": "npm run build:cjs && npm run build:esm && tsc -p tsconfig.build.json",
    "watch": "tsc -w -p tsconfig.json",
    "clean": "git clean -dfqX -- {dist,node_modules}/** && rm -rf tsconfig.tsbuildinfo dist",
    "test": "vitest run",
    "test:watch": "vitest run --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "bench": "vitest bench",
    "bench:run": "vitest bench",
    "dev": "bun run watch"
  },
  "keywords": [
    "fte",
    "formatter",
    "linter",
    "templates"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@babel/generator": "^7.28.3",
    "@babel/parser": "^7.28.4",
    "fte.js-parser": "^3.0.0-rc.13"
  },
  "devDependencies": {
    "@types/node": "^20.12.8",
    "esbuild": "^0.25.10",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
